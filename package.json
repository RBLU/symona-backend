{
  "name": "symona-backend",
  "version": "1.0.0",
  "description": "SYSYIS Monitoring Application for Business Users",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=unittest mocha test --recursive -w  --color --reporter spec |pino",
    "citest": "NODE_ENV=ci mocha test --recursive  --color --reporter spec",
    "build": "npm run build-ts && npm run tslint",
    "start": "npm run build && npm run watch",
    "serve": "nodemon  dist/app.js |pino",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/app.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RBLU/symona-backend.git"
  },
  "keywords": [
    "SYMONA"
  ],
  "author": "Reto Blunschi <reto.blunschi@youpers.com> (http://www.youpers.com)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/RBLU/symona-backend/issues"
  },
  "homepage": "https://github.com/RBLU/symona-backend#readme",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "dotenv": "^4.0.0",
    "i": "^0.3.6",
    "jwt-simple": "^0.5.1",
    "knex": "^0.14.0",
    "moment": "^2.19.1",
    "nconf": "^0.9.1",
    "nodemon": "^1.12.1",
    "oracledb": "^1.13.1",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-restify": "^1.0.1",
    "pino": "^4.9.0",
    "restify": "^6.3.1",
    "restify-cors-middleware": "^1.0.1",
    "restify-errors": "^5.0.0",
    "restify-pino-logger": "^2.0.0",
    "treeize": "^2.1.2",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/knex": "0.0.65",
    "@types/moment": "^2.13.0",
    "@types/nconf": "0.0.35",
    "@types/passport": "^0.4.1",
    "@types/pino": "^4.7.0",
    "@types/restify": "^5.0.6",
    "@types/restify-cors-middleware": "^1.0.1",
    "@types/restify-errors": "^4.3.2",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^4.0.1",
    "typescript": "^2.6.1"
  }
}
